{
    "extends": ["next/core-web-vitals", "prettier", "react-app"],
    "plugins": ["prettier", "react"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "avoid",
                "semi": true,
                "trailingComma": "none",
                "endOfLine": "lf",
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": true,
                "printWidth": 80,
                "jsxSingleQuote": false
            }
        ]
    }
}
